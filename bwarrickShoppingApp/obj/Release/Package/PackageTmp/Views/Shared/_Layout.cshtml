
<!DOCTYPE html>
<html>
<head>
    <style>
        .topleft {
            position: absolute;
            top: 8px;
            left: 24px;
            font-size: 24px;
            color: white;
            margin-left: 20px;
        }

        .picturetext {
            position: relative;
        }
    </style>
    <title>Ecommerce App</title>
    <meta charset="utf-8" />  
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
          crossorigin="anonymous">
    <link href="~/Assets/CSS/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Assets/CSS/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Assets/Content/bootstrap.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC|Bad+Script|Courgette|Lobster|Poiret+One|Zilla+Slab" rel="stylesheet">
    <link href="~/Assets/CSS/myCustomStyle.css" rel="stylesheet" />
</head>
<body>
    <script>
        function myFunction() {
            var newDisplay = document.getElementById("navbar");
            if (newDisplay.style.display == "none") {
                newDisplay.style.display = "block";
            }
            else { newDisplay.style.display = "none"; }
        }

        function dropFunction() {
            var dropData = document.getElementById("dropDown");
            if (dropData.style.display == "none") {
                dropData.style.display = "block";
            }
            else {
                dropData.style.display = "none";
            }
        }
    </script>
    <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" style="padding:50px; text-align:center;">
                <div class="modal-header" style="border-style:none;">
                    <div class="modal-title" style="border-style:none; font-family:'Zilla Slab'; color:steelblue">
                        N E W S L E T T E R
                    </div>
                </div>
                <div class="modal-body" style="border-style:none;">
                    Join our mailing list to receive updates on new arrivals and special offers.
                </div>
                <div class="modal-body" style="border-style:none;">
                    <input placeholder="Enter email address" style="width:100%;" />
                </div>
                <div class="modal-footer" style="border-style:none;">
                    <button class="btn btn btn-default" style="color:white;">@Html.ActionLink("Subscribe", "Subscription", "Home")</button>
                </div>
            </div>
        </div>
    </div>
    <div id="mapModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" style="padding:50px; text-align:center;">
                <div class="modal-header" style="border-style:none;">
                    <div class="modal-title" style="border-style:none;">
                        M U G   S H O P
                    </div>
                </div>
                <div class="modal-body" style="border-style:none;">
                    Search the map for the location nearest to you.
                </div>
                <div class="modal-body" style="border-style:none;">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3223.8652279716152!2d-80.07436658487771!3d36.09677321467761!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88530739101f5817%3A0x64583b7d90957128!2sCoder+Foundry!5e0!3m2!1sen!2sus!4v1502127674072" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
    <nav id="navbar" style="display:none; position:fixed;">
        <div class="headingforMenu">
            <h2 style="font-family:'Zilla Slab'; color:steelblue; border-style:dotted; text-align:center">MugShop</h2>
        </div>
        <div class="myCustomNavItem" style="font-family:'Zilla Slab';color:steelblue">  
            <div>
                <button type="button" style="background-color: white; border-style: none; font-size:20px;" onclick="dropFunction()">
                    Shop
                </button>
            </div>
            <div id="dropDown" style="display:none; font-family: 'Zilla Slab'; font-size: 20px;">
                <div>
                    <button type="button" style="background-color: white;font-size: 16px;
                 border-style: none;">
                        @Html.ActionLink("-All Items-", "Index", "Items")
                    </button>
                </div>
                <div>
                    <button type="button" style="background-color: white;font-size: 16px;
                 border-style: none;">
                        @Html.ActionLink("-Shop Mugs-", "Index", "Items", new { type = "Mug" }, null)
                    </button>
                </div>
                <div>
                    <button type="button" style="background-color: white;font-size: 16px;
                 border-style: none;">
                        @Html.ActionLink("-Shop Vases-", "Index", "Items", new { type = "Vase" }, null)
                    </button>
                </div>
                <div>
                    <button type="button" style="background-color: white;font-size: 16px;
                 border-style: none;">
                        @Html.ActionLink("-Shop Plates & Bowls-", "Index", "Items", new { type = "PlateBowl" }, null)
                    </button>
                </div>
            </div >
            <a href="#">Pottery Classes</a>
            <a href="#">Clays for Sale</a>
            <a href="#">Pottery Tools</a>

            <button type="button" style="background-color: white;font-size: 16px;
                 border-style: none;">
                @Html.ActionLink("Contact", "Contact", "Home")
            </button>
            <a href="#" data-toggle="modal" data-target="#myModal">Newsletter</a>
        </div>
    </nav>
    <div style="margin-left:200px;">
        <div class="container" style="padding-top:20px;">
            <div class="row">  
                <div class="col-md-12" style="display:block;">
                    <div style="background-color:lightblue; padding:20px">
                        <button type="button" onclick="myFunction()" style="border-style:none; background-color:lightblue; margin-top:15px">
                        <i class="fa fa-navicon" style="font-size:18px; color:steelblue; border-style:none;"></i></button>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-12" style="padding-left: 0px; padding-right:0px; margin-top:5px;">
                    <div class="picturetext">
                        <div class="container">
                            <img class="img-responsive" src="~/Assets/Images/Mugs (2).jpg" />
                            <div class="topleft" style="margin-top:30px; font-size:50px; 
                                 font-family: 'Amatic SC', 'cursive'"><b>Spring into Summer with NEW Styles</b></div>
                            <div class="topleft" style="margin-top:120px; font-size:45px;
                                 font-family: 'Amatic SC', 'cursive'"><b>Summer Collection 2017</b></div>
                            <div class="topleft" style="margin-top:200px;font-family: 'Zilla Slab', 'cursive'">
                                 <a href="@Url.Action("Index", "Home")">SHOP NOW</a></div>
                        </div>
                    </div>
                    <p style="margin-left:13px; margin-bottom:10px;font-family: 'Zilla Slab';
                       text-align:center; font-size:20px; color:steelblue">-Summer Collection: Sunny Set-</p>
                </div>
            </div>
        </div>
        @RenderBody()
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="SubscribeBox" style="background-color:lightblue; font-family: 'Zilla Slab'">
                        <h1 style="font-family: 'Zilla Slab'">Subscribe</h1>
                        <p style="font-size:20px">To get special offers and <span style="color:orange"><b>VIP</b></span> treatment</p>
                        <p><input placeholder="Enter e-mail" style="color:black" /></p>
                        <button>@Html.ActionLink("Subscribe", "Subscription", "Home")</button>
                    </div>
                </div>
            </div>
            <div class="row" style="background-color:white; font-family: 'Zilla Slab'; margin-left:0; margin-right:0;">
                <div class="col-xs-4">
                    <div class="ContactBox" style="text-align:center; color:steelblue">
                        <h4><b>Contact</b></h4>
                        <p>Questions? Go ahead.</p>
                        <p><input placeholder="Name" /></p>
                        <p><input placeholder="Email" /></p>
                        <p><input placeholder="Subject" /></p>
                        <p><input placeholder="Message" /></p>
                        <p><button style="background-color:lightblue; color:steelblue;">@Html.ActionLink("Submit", "Message", "Home")</button></p>
                    </div>
                </div>
                <div class="col-xs-4">
                    <div class="AboutUs" style="display:block; text-align:center; color:steelblue">
                        <h4><b>About</b></h4>
                        <p><a style="color:steelblue">About Us</a></p>
                        <p><a style="color:steelblue">We're Hiring</a></p>
                        <p><a style="color:steelblue">Support</a></p>
                        <p><a href="#" data-toggle="modal" data-target="#mapModal">Find a Store</a></p>
                        <p><a style="color:steelblue">Shipment</a></p>
                        <p><a style="color:steelblue">Payment</a></p>
                        <p><a style="color:steelblue">Gift card</a></p>
                        <p><a style="color:steelblue">Return</a></p>
                        <p><a style="color:steelblue">Help</a></p>
                    </div>
                </div>
                <div class="col-xs-4">
                    <div class="StoreInfo" style="display:block; text-align:center; color:steelblue">
                        <h4><b>Store</b></h4>
                        <p><i class="fa fa-map-marker"></i> Company Name</p>
                        <p><i class="fa fa-phone"></i> 720.668.0370</p>
                        <p><i class="fa fa-envelope"></i> ex@mail.com</p>
                        <h4><b>We Accept</b></h4>
                        <p> <i class="fa fa-cc-amex"></i> Amex</p>
                        <p><i class="fa fa-cc"></i> Credit Card</p>
                        <div class="social" style="color:steelblue">
                            <a href="#" style="color:steelblue"><i class="fa fa-facebook"></i></a>
                            <a href="#" style="color:steelblue"><i class="fa fa-instagram"></i></a>
                            <a href="#" style="color:steelblue"><i class="fa fa-snapchat"></i></a>
                            <a href="#" style="color:steelblue"><i class="fa fa-pinterest"></i></a>
                            <a href="#" style="color:steelblue"><i class="fa fa-twitter"></i></a>
                            <a href="#" style="color:steelblue"><i class="fa fa-linkedin"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Footer begins-->
        <div class="container" style="font-family: 'Zilla Slab'">
            <footer class="footer">
                <center>
                    <div style="background-color:lightblue; color:steelblue;">
                        <p>
                            Powered by <a href="https://www.coderfoundry.com" style="color:steelblue">CoderFoundry</a> Copyright CoderFoundry
                        </p>
                    </div>
                </center>
            </footer>
        </div>
    </div>
    <!--Footer ends-->
    <script src="~/Assets/scripts/jquery-1.9.1.js"></script>
    <script src="~/Assets/scripts/bootstrap.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

