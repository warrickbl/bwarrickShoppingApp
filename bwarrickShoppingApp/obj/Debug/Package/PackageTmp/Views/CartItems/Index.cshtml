@model IEnumerable<bwarrickShoppingApp.Models.CodeFirst.CartItem>

@{
    ViewBag.Title = "Index";
}

<h2 style="margin-left:95px; font-family:'Zilla Slab'; color:steelblue;">Your Shopping Cart</h2>


<table class="table" style="margin-left:90px; width:1100px; font-family:'Zilla Slab'; color:steelblue;">
    <tr>
        <th>

        </th>
        <th>
            Item Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th>
            Price per Item (USD)
        </th>
        <th>
            Date
        </th>
        <th>

        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img class="img-responsive" style="height:200px; width:250px; position:center" src="@Url.Content(item.Item.MediaURL)" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
<div class="container">
    <div class="row">
        <div class="col-md-6">
        </div>
        <div class="col-md-6">
            <p style="margin-left:220px;">
                <button>@Html.ActionLink("Proceed to Checkout", "Create", "Orders")</button> 
                <button>@Html.ActionLink("Continue Shopping", "Index", "Home")</button>
            </p>
        </div>
    </div>
</div>
