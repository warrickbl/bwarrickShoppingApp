        <table class="table" style="margin-left:90px; width:1100px;">
            <tr>
                <th>
                    Item
                </th>
                <th>
                    Count
                </th>
                <th>
                    Price per Item
                </th>
            </tr>

            @foreach (var orderItem in Model.OrderItems)
            {
                <tr>
                    <td>
                        <img class="img-responsive" style="height:200px; width:250px; position:center" src="@Url.Content(orderItem.Item.MediaURL)" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => orderItem.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => orderItem.Item.Price)
                    </td>

                </tr>
            }
        </table>
  
