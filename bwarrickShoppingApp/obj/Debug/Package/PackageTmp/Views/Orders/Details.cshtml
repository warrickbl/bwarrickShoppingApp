<div style="margin-left:1100px; padding:20px;">
    <p>
        
        @Html.ActionLink("Back to List", "Index")
    </p>
    @if (Model.Completed == false)
    {
    <button>@Html.ActionLink("Confirm Order", "Confirmation", "Orders", new { Completed = true, id = Model.Id }, null)</button> 
